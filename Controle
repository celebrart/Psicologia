    <!-- Modal de configura√ß√£o -->
    <div class="modal-config" id="configModal">
        <div class="modal-content-config">
            <label for="confTitle">T√≠tulo:</label>
            <input type="text" id="confTitle" value="üìã Controle de Provas">
            <label for="confSubtitle">Subt√≠tulo:</label>
            <input type="text" id="confSubtitle" value="Intranet de Gest√£o de Avalia√ß√µes">
            <label for="confPrimary">Cor principal:</label>
            <input type="color" id="confPrimary" value="#2196F3">
            <label for="confCursos">Cursos <span style="font-weight:400">(separar por v√≠rgulas)</span>:</label>
            <input type="text" id="confCursos" value="Psicologia, Gest√£o, Administra√ß√£o">
            <label for="confLogo">Logo Institucional:</label>
            <input type="file" id="confLogo" accept="image/*" onchange="previewLogo(event)">
            <img id="logoPreview" src="" style="display:none;">
            <div class="modal-buttons">
                <button onclick="closeConfigModal()">Cancelar</button>
                <button onclick="saveConfig()">Salvar</button>
            </div>
        </div>
    </div>

    <script>
        function openConfigModal() {
            document.getElementById("configModal").classList.add("active");
        }
        function closeConfigModal() {
            document.getElementById("configModal").classList.remove("active");
        }
        function previewLogo(event) {
            const file = event.target.files[0];
            const preview = document.getElementById("logoPreview");
            if (file) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    preview.src = e.target.result;
                    preview.style.display = "block";
                };
                reader.readAsDataURL(file);
            }
        }
        function saveConfig() {
            // T√≠tulo
            let title = document.getElementById("confTitle").value;
            document.getElementById("headerTitle").textContent = title;
            document.title = title;
            // Subt√≠tulo
            document.getElementById("headerSubtitle").textContent =
                document.getElementById("confSubtitle").value;
            // Cor Principal
            let color = document.getElementById("confPrimary").value;
            document.documentElement.style.setProperty('--color-primary', color);
            // Logo
            let logoSrc = document.getElementById("logoPreview").src;
            let instLogo = document.getElementById("instLogo");
            if (logoSrc && logoSrc !== window.location.href) {
                instLogo.src = logoSrc;
                instLogo.style.display = "inline";
            }
            // Cursos (opcional, aqui s√≥ salva para uso futuro, ex: filtro)
            window.siteCursos = document.getElementById("confCursos").value.split(',');
            closeConfigModal();
        }
    </script>
    <!-- Scripts do sistema permanecem conforme original -->
